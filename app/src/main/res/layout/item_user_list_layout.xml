<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@mipmap/ic_profile"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/user_profile_image"
        />

    <TextView
        android:text="profile name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/user_profile_image"
        android:layout_marginStart="33dp"
        android:id="@+id/user_profile_name"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textAllCaps="false"
        android:textColor="@color/colorBlack" />

    <TextView
        android:text="profile status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_profile_name"
        android:layout_alignStart="@+id/user_profile_name"

        android:id="@+id/user_profile_status"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="13dp"
        android:layout_height="13dp"
        app:srcCompat="@drawable/online_check_bg"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        android:id="@+id/online_check_icon" />
</RelativeLayout>